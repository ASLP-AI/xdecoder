{
  "runtime": {
    "thread_pool_size": 8   
  },

  "wav_dir": "./www/wav",
  "use_db": true,

  "db": {
    "host": "mysql",
    "user": "root",
    "passwd": "admin",
    "db": "asr",
    "charset": "utf8"
  },

  "decoder": {
    "beam": 13.0,
    "max_active": 7000,
    "acoustic_scale": 0.066667,
    "skip": 0,
    "max_batch_size": 128,
    "hclg": "config/hclg",
    "tree": "config/tree",
    "pdf_prior": "config/pdf_prior",
    "lexicon": "config/words.txt"
  },

  "am": {
    "net": "config/am.net",
    "num_bins": 40,
    "left_context": 5,
    "right_context": 5,
    "cmvn": "config/am.cmvn"
  },

  "vad": {
    "net": "config/vad.net",
    "num_bins": 40,
    "left_context": 5,
    "right_context": 5,
    "cmvn": "config/vad.cmvn",
    "silence_thresh": 0.5,
    "speech_to_silence_thresh": 3,
    "silence_to_speech_thresh": 15,
    "endpoint_trigger_thresh": 100
  }
}


